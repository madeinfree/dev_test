<%= bootstrap_form_for [:admin, @post]  do |f| %>
  <%= f.text_field :title %>
  <%= f.fields_for :term do |builder_form| %>
    <%= builder_form.text_field :tag %>
  <% end %>
  請用逗號 (comma) 區分多個標籤
  <%= f.text_area :content %>
  <%= f.submit "Submit" %>
  <%= link_to('back', admin_posts_url) %>
<% end %>
