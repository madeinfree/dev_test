<%= render partial: 'admin/common/header_nav' %>
<div class="container">
<%= link_to('新增產品', new_admin_product_path) %>
</div>
<hr>
<div class="container">
<table class="table table-bordered">
  <tr>
    <td>產品名稱</td>
    <td>價格</td>
    <td>圖片</td>
    <td>編輯</td>
    <td>刪除</td>
  </tr>
  <% @products.each do |f| %>
  <tr>
    <td><%= f.name %></td>
    <td><%= f.price %></td>
    <td><%= image_tag f.image_url(:thumb) %></td>
    <td><%= link_to('edit', edit_admin_product_path(f)) %></td>
    <td><%= link_to('delete', admin_product_path(f), :method => 'delete') %></td>
  </tr>
  <% end %>
</table>
</div>
